# Environment Variables Template for Production
# Copy this file to .env and fill in your actual values

# API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///app.db
VECTOR_DB_PATH=/app/db/chroma
KNOWLEDGE_DB_PATH=/app/db/knowledge/knowledge_graph.sqlite

# FastAPI Configuration  
SECRET_KEY=your-super-secret-jwt-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Documents storage
DOCUMENTS_ROOT=/app/documents

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
RELOAD=false

# arXiv Papers Analysis System - Additional Configuration
# Copy this file to .env and fill in your actual API keys and settings

# Optional API Keys
OPENAI_API_KEY=your_openai_api_key_here

